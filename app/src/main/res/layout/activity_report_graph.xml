<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportGraph">

    <include layout="@layout/toolbar"
        android:id="@+id/layoutToolbar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

<ScrollView
    android:layout_below="@+id/layoutToolbar2"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".ReportGraph$PlaceholderFragment"
        >

        <TextView
        android:id="@+id/totalBooking"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Total Booking Yearly Report"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="18sp" />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:context=".ReportGraph"
            tools:ignore="MergeRootFrame"
            android:layout_below="@+id/totalBooking">
        </FrameLayout>

        <TextView
            android:layout_below="@+id/container"
            android:id="@+id/totalConfirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Total Confirmed Booking Yearly Report"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:context=".ReportGraph"
            tools:ignore="MergeRootFrame"
            android:layout_below="@+id/totalConfirmed">

        </FrameLayout>

        <TextView
            android:layout_below="@+id/container2"
            android:id="@+id/totalCanceled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="Total Canceled Booking Yearly Report"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="18sp" />

        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/container3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            tools:context=".ReportGraph"
            tools:ignore="MergeRootFrame"
            android:layout_below="@+id/totalCanceled">
        </FrameLayout>
    </RelativeLayout>
    </ScrollView>
</RelativeLayout>
